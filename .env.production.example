# ============================================
# Production Environment Variables
# Copy to .env.production and fill in values
# ============================================

# Domain (without https://)
APP_DOMAIN=admin.yourdomain.com
APP_URL=https://admin.yourdomain.com

# PostgreSQL
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Redis (leave empty for no password)
REDIS_PASSWORD=

# MinIO (S3 storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_MINIO_PASSWORD

# JWT Secrets (generate with: openssl rand -hex 32)
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL

# Telegram Bot
TELEGRAM_BOT_TOKEN=

# Telegram Admin Chat ID (your personal TG ID or group chat ID for admin notifications)
# To get your chat ID: message @userinfobot in Telegram
TELEGRAM_ADMIN_CHAT_ID=

# Telegram Auth Secret (defaults to bot token if empty)
# Generate with: openssl rand -hex 32
TG_AUTH_SECRET=

# Yandex OAuth
YANDEX_CLIENT_ID=
YANDEX_CLIENT_SECRET=
YANDEX_REDIRECT_URI=https://admin.yourdomain.com/api/auth/yandex/callback

# SMTP (email)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Database URL (constructed automatically, don't change format)
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/cargo_marketplace
